@{
    ViewData["Title"] = "Index";
}
@addTagHelper *,Microfost.AspNetCore.Mvc.TagHelpers
@addTagHelper *,AuthoringTagHelpers
@model List<PersonDetails>
<h1>Person List</h1>
<div>
    <a asp-action="Add" class="btn btn-primary">Add</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>id</th>
                <th>Birthday</th>
                <th>Person City</th>

                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.BirthDay</td>
                    <td>@item.PersonCity</td>

                    <td>
                        <a style="color:white" class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

